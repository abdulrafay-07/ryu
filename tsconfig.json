{
  "compilerOptions": {
    /* === Modern Environment === */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],

    /* === Emit Settings === */
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,

    /* === Module Resolution === */
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* === Quality & Safety === */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* === JSX (unused, but safe) === */
    "jsx": "react-jsx",

    /* === Others === */
    "allowJs": false,
    "noEmitOnError": true,
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "**/*.test.ts"]
}
